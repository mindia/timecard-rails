<h3>new Authentication</h3>

<% if @authentication.errors.any? %>
  <% @authentication.errors.messages.each do |message| %>
    <p><%= message[1] %></p>
  <% end %>
<% end %>


<%= form_for([current_user, @authentication]) do |u| %>
  <div class="form-group">
    <%= u.label :provider %>
    <%= u.select( :provider, @select_list, {}, { :class => "form-control", :disabled => @select_list.empty? } ) %>
  </div>
  <div class="form-group">
    <%= u.label "crowdworks mail address" %>
    <%= u.text_field :username, {:class => "form-control", :disabled => @select_list.empty? } %>
  </div>
  <%= u.hidden_field :user_id, :value => current_user.id %>
  <div class="actions" >
    <%= u.submit class: "btn btn-success", :disabled => @select_list.empty?  %>
  </div>
<%  end %>

<p><br>
<%= link_to 'Back', user_authentications_path(current_user) %>
</p>